# Django Secret Key - IMPORTANT: Change this in production!
# Generate a new one using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-change-in-production

# Debug Mode - Set to False in production for security
DEBUG=True

# PostgreSQL Database Configuration
DATABASE_NAME=project_management
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# Database Host - Use 'db' for Docker, 'localhost' for local development
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Allowed Hosts - Comma-separated list of domains/IPs that can access the application
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS Origins - Comma-separated list of frontend URLs allowed to access the API
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
